@inject Selfitness.MVC.Services.MvcAccountService _accountService;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Selfitness.MVC</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Selfitness.MVC.styles.css" asp-append-version="true" />
</head>
<body>

    @if (_accountService.IsLogedIn())
    {
        <a href="/Account/Logout">登出</a>
    }

    <main>
        @RenderBody()
    </main>

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
